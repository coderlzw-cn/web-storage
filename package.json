{
  "name": "@coderlzw/web-storage",
  "version": "1.0.0",
  "description": "一个功能强大的浏览器存储管理库，支持 localStorage、sessionStorage 和 Cookie 的统一管理，提供加密、过期时间、版本控制等高级功能",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run test:run && npm run build",
    "format": "ultracite format",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "prepare": "lefthook install",
    "release": "semantic-release",
    "release:ci": "semantic-release --ci"
  },
  "keywords": [
    "localStorage",
    "sessionStorage",
    "cookie",
    "typescript"
  ],
  "author": {
    "name": "coderlzw",
    "email": "coderlzw@foxmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderlzw-cn/web-storage.git"
  },
  "bugs": {
    "url": "https://github.com/coderlzw-cn/web-storage/issues"
  },
  "homepage": "https://github.com/coderlzw-cn/web-storage#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "crypto-js": "^4.2.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/crypto-js": "^4.2.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lefthook": "^1.12.3",
    "lint-staged": "^16.1.5",
    "semantic-release": "^24.2.7",
    "tsup": "^8.0.1",
    "typescript": "^5.9.2",
    "ultracite": "5.2.9",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx}": [
      "pnpm run format"
    ],
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite format"
    ]
  }
}
